<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="15dp"
        android:background="#fece2f">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="158dp"

            android:src="@drawable/profile2"
            app:civ_border_width="4dp" />


        <ImageView
            android:layout_width="78dp"
            android:layout_height="147dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-4dp"
            android:id="@+id/signoutlogo"
            android:layout_marginBottom="-12dp"
            android:src="@drawable/signout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="31dp"
            android:text="Your Profile"
            android:textColor="#171717"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:id="@+id/pro_username"

            android:layout_marginBottom="11dp">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="10dp"
                android:onClick="update"></com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:id="@+id/pro_email"
            android:layout_marginBottom="11dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"></com.google.android.material.textfield.TextInputEditText>




        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mobile number"
            android:id="@+id/pro_pnum"
            android:layout_marginBottom="11dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:onClick="update"></com.google.android.material.textfield.TextInputEditText>




        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:id="@+id/pro_password"
            android:layout_marginBottom="11dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:onClick="update"></com.google.android.material.textfield.TextInputEditText>






        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pro_update"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn"
                android:onClick="update"
                android:text="Update"
                android:textColor="#FAF6F6"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:layout_marginTop="20dp"
                android:text="Delete"
                android:id="@+id/pro_delete"
                android:textColor="#FAF6F6"
                android:layout_marginLeft="60dp"
                android:textSize="18sp"
                android:textStyle="bold" />




        </LinearLayout>




    </LinearLayout>



</LinearLayout>